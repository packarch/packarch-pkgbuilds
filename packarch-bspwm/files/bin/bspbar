# launch a custom Polybar if it exists  #
Bar=$(head ~/.config/bspwm/selectedThemeName)
# launch a custom Polybar if it exists  #

# Files and Directories #
DIR="$HOME/.config/bspwm/polybar"
SFILE="$DIR/system"

# Get system variable values for various modules #
get_values() {

	CARD=$(light -L | grep 'backlight' | head -n1 | cut -d'/' -f3)
	BATTERY=$(upower -i `upower -e | grep 'BAT'` | grep 'native-path' | cut -d':' -f2 | tr -d '[:blank:]')
	ADAPTER=$(upower -i `upower -e | grep 'AC'` | grep 'native-path' | cut -d':' -f2 | tr -d '[:blank:]')
	INTERFACE=$(ip link | awk '/state UP/ {print $2}' | tr -d :)

}

# Write values to `system` file #
set_values() {

	if [[ "$ADAPTER" ]]; then
		sed -i -e "s/adapter = .*/adapter = $ADAPTER/g" 						${SFILE}
	fi
	if [[ "$BATTERY" ]]; then
		sed -i -e "s/battery = .*/battery = $BATTERY/g" 						${SFILE}
	fi
	if [[ "$CARD" ]]; then
		sed -i -e "s/graphics_card = .*/graphics_card = $CARD/g" 				${SFILE}
	fi
	if [[ "$INTERFACE" ]]; then
		sed -i -e "s/network_interface = .*/network_interface = $INTERFACE/g" 	${SFILE}
	fi

}

# Launch Polybar with selected style #
launch_bar() {
	
	CARD=$(light -L | grep 'backlight' | head -n1 | cut -d'/' -f3)
	INTERFACE=$(ip link | awk '/state UP/ {print $2}' | tr -d :)

	if [[ -z "$CARD" ]]; then
		sed -i -e 's/backlight/bna/g' "$DIR"/"$Bar"/config.ini
	elif [[ "$CARD" != *"intel_"* ]]; then
		sed -i -e 's/backlight/brightness/g' "$DIR"/"$Bar"/config.ini
	fi

	if [[ "$INTERFACE" == e* ]]; then
		sed -i -e 's/network/ethernet/g' "$DIR"/"$Bar"/config.ini
	fi
	
	if [[ ! `pidof polybar` ]]; then
	
			if [[ "$Bar" == "cyberpunk" ]]; then
				
				pkill polybar
				bspc config top_padding 42
				bspc config bottom_padding 42
				sed -i -e "s/bspc config top_padding .*/bspc config top_padding 42; bspc config bottom_padding 42; bspc config -d focused window_gap 10/g" ${HOME}/.config/bspwm/sxhkdrc
				polybar -q main -c "$DIR"/"$Bar"/config.ini &
				polybar -q bottom -c "$DIR"/"$Bar"/config.ini &
				
			elif [[ "$Bar" == "catppuccin" ]]; then

				pkill polybar
				bspc config top_padding 42
				bspc config bottom_padding 42
				sed -i -e "s/bspc config top_padding .*/bspc config top_padding 42; bspc config bottom_padding 42; bspc config -d focused window_gap 10/g" ${HOME}/.config/bspwm/sxhkdrc
				polybar -q main -c "$DIR"/"$Bar"/config.ini &
				polybar -q bottom -c "$DIR"/"$Bar"/config.ini &

			elif [[ "$Bar" == "satanic" ]]; then

				pkill polybar
				bspc config top_padding 42
				bspc config bottom_padding 0
				sed -i -e "s/bspc config top_padding .*/bspc config top_padding 42; bspc config bottom_padding 0; bspc config -d focused window_gap 10/g" ${HOME}/.config/bspwm/sxhkdrc
				polybar -q main -c "$DIR"/"$Bar"/config.ini &
				
			elif [[ "$Bar" == "wave" ]]; then

				pkill polybar
				bspc config top_padding 0
				bspc config bottom_padding 40
				sed -i -e "s/bspc config top_padding .*/bspc config top_padding 0; bspc config bottom_padding 40; bspc config -d focused window_gap 10/g" ${HOME}/.config/bspwm/sxhkdrc
				polybar -q main -c "$DIR"/"$Bar"/config.ini &
				
			elif [[ "$Bar" == "emilia" ]]; then

				pkill polybar
				bspc config top_padding 0
				bspc config bottom_padding 52
				sed -i -e "s/bspc config top_padding .*/bspc config top_padding 0; bspc config bottom_padding 52; bspc config -d focused window_gap 10/g" ${HOME}/.config/bspwm/sxhkdrc
				polybar -q main -c "$DIR"/"$Bar"/config.ini &
				
			elif [[ "$Bar" == "forest" ]]; then

				pkill polybar
				bspc config top_padding 25
				bspc config bottom_padding 0
				sed -i -e "s/bspc config top_padding .*/bspc config top_padding 30; bspc config bottom_padding 0; bspc config -d focused window_gap 10/g" ${HOME}/.config/bspwm/sxhkdrc
				polybar -q main -c "$DIR"/"$Bar"/config.ini &
				
			elif [[ "$Bar" == "aline" ]]; then

				pkill polybar
				bspc config top_padding 25
				bspc config bottom_padding 0
				sed -i -e "s/bspc config top_padding .*/bspc config top_padding 30; bspc config bottom_padding 0; bspc config -d focused window_gap 10/g" ${HOME}/.config/bspwm/sxhkdrc
				polybar -q main -c "$DIR"/"$Bar"/config.ini &

			else
				pkill polybar
				polybar -q main -c "$DIR"/"$Bar"/config.ini &
			fi

	else
		polybar-msg cmd restart
	fi
	
}

# Execute functions #
get_values
set_values

# launch polybar #
launch_bar
