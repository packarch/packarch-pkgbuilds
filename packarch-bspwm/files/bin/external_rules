#! /bin/sh

# Author 	 -  z0mbi3
# Source 	 -  https://github.com/gh0stzk/dotfiles
# Maintainer -  z0mbi3.zk@protonmail.com

wid=$1
class=$2
instance=$3
consequences=$4
title=$(xtitle "$wid")

if [ "$instance" = alacritty ] ; then
	case "$title" in
		ranger)
			echo "state=floating rectangle=811x286+0+0 center=on"
			;;
		zfetch)
		    echo "border=off state=floating rectangle=616x354+36+115"
		    ;;
		sysfetch)
		    echo "border=off state=floating rectangle=352x500+36+115"
		    ;;
		updating)
			echo "state=floating rectangle=483x190+1090+72"
			;;
		musicplayer)
			echo "state=floating rectangle=630x215+0+0 center=on"
			;;
	esac
fi

main () {
case "$class" in
	sysfetch)
	    eval "$consequences"
		[ "$state" ] || echo "state=floating rectangle=352x500+36+115 center=on follow=on"
		;;
	Viewnior)
	    eval "$consequences"
	    [ "$state" ] || echo "state=floating focus=on center=on border=off"
		;;
	whatsapp-nativefier-d40211|TelegramDesktop)
	    eval "$consequences"
	    [ "$state" ] || echo "state=pseudo_tiled desktop=^4 center=on follow=on rectangle=930x617+0+0"
		;;
	Main.py)
	    eval "$consequences"
	    [ "$state" ] || echo "state=floating follow=on center=on rectangle=1024x780+0+0"
	    ;;
	Code)
	    eval "$consequences"
	    [ "$state" ] || echo "state=floating desktop=^6 follow=on center=on"
	    ;;
	Pavucontrol)
	    eval "$consequences"
	    [ "$state" ] || echo "state=floating follow=on center=on"
	    ;;
	Gcolor3)
	    eval "$consequences"
	    [ "$state" ] || echo "state=floating follow=on center=on"
	    ;;
	Music)
	    eval "$consequences"
	    [ "$state" ] || echo "state=floating follow=on center=on"
	    ;;
	termfloat)
	    eval "$consequences"
	    [ "$state" ] || echo "state=floating rectangle=800x600+0+0 center=on follow=on"
	    ;;
	 Transmission-gtk)
	    eval "$consequences"
	    [ "$state" ] || echo "desktop=^6 follow=on"
	    ;;
	  Spotify)
		eval "$consequences"
	    [ "$state" ] || echo "state=pseudo_tiled center=on border=off rectangle=1124x600 desktop=^6 follow=on"
		;;
		"")
        sleep 0.5
		wm_class=($(xprop -id $wid | grep "WM_CLASS" | grep -Po '"\K[^,"]+'))
		class=${wm_class[-1]}
		[[ ${#wm_class[@]} == "2" ]] && instance=${wm_class[0]}
		[[ -n "$class" ]] && main
		;;
esac
}

main
case "$instance" in
     Toolkit)
        eval "$consequences"
        [ "$state" ] || echo "state=floating sticky=on rectangle=500x290+1054+593"
	    ;;
esac  
