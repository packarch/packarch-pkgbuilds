## launch alacritty with bspwm config

CONFIG="$HOME/.config/bspwm/alacritty/alacritty.yml"

if [ "$1" == "--yes" ]; then
	sed -i -e "s/opacity:.*/opacity: 0.7/g" $CONFIG
elif [ "$1" == "--no" ]; then
	sed -i -e "s/opacity:.*/opacity: 1.0/g" $CONFIG
else
	alacritty --config-file "$CONFIG"
fi
