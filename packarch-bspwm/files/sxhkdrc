## Keybindings config for Packarch's BSPWM

##---------- Keybindings for bspwm ----------##

# Terminal (alacritty)
super + Return
	alacritty --config-file ~/.config/bspwm/alacritty/alacritty.yml

# Terminal (floating)
super + shift + Return
	alacritty --class termfloat --config-file ~/.config/bspwm/alacritty/alacritty.yml


##---------- Rofi Launcher & Menus ----------##

# Rofi App Launcher
alt + F1
	sh ~/.config/bspwm/rofi/bin/launcher

# Rofi Network Menu
super + n
	nmd

# Take screenshot in 5 second
super + shift + b
	~/.config/bspwm/bin/opacityterm --yes
	
super + shift + n
	~/.config/bspwm/bin/opacityterm --no

# Rofi Menus/Applets
super + {w,m,x,r,s,t}
	sh ~/.config/bspwm/rofi/bin/{windows,mpd,powermenu,asroot,screenshot,themes}

##---------- Applications ----------##

# Launch Apps
super + {p,f,g,v}
	{thunar,firefox,geany,virtualbox}

# Terminal Apps
ctrl + alt + {v,r,h}
	alacritty --config-file ~/.config/bspwm/alacritty/alacritty.yml -e {vim,ranger,htop}

# Lockscreen
ctrl + alt + l
    betterlockscreen --lock

##---------- System Keys ----------##

# Take a screenshot
Print
	~/.config/bspwm/bin/takeshot --win
	
# Take screenshot in 5 second
alt + Print	
	~/.config/bspwm/bin/takeshot --in5

# Take screenshot in 10 second
shift + Print	
	~/.config/bspwm/bin/takeshot --in10

# Take screenshot of area
ctrl + alt + Print
	~/.config/bspwm/bin/takeshot --area

# Brighness control
XF86MonBrightness{Up,Down}
	brightness{ --inc, --dec}
	
# Volume control
XF86Audio{RaiseVolume,LowerVolume}
	volume{ --inc, --dec}

XF86AudioMute
	volume --toggle

XF86AudioMicMute
	volume --toggle-mic
	
# Music control
XF86Audio{Next,Prev,Play,Stop}
	mpc {next,prev,toggle,stop}

##---------- Bspwm ----------##

# Close App
super + {_,shift + }c
	bspc node -{c,k}

# Reload Keybindings
super + Escape
	pkill -USR1 -x sxhkd

# kill window
ctrl + alt + Escape
    xkill

# Quit/Restart bspwm
super + shift + {q,r}
	bspc {quit,wm -r}
	
# Split horizontal, vertical or cancel
# super + {h,v,q}
#	bspc node -p {east,south,cancel}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Fullscreen or Monocle
super + f
#	bspc desktop -l next
    bspc node -t "~"fullscreen

# Toggle beetwen floating & tiled
super + space
    bspc node -t "~"{floating,tiled}

# Pseudo Tiled & tiled mode
super + shift + space
#super + {p,t}
    bspc node -t "~"{pseudo_tiled,tiled}

# Set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

# Send the window to another edge of the screen
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Change focus to next window, including floating window
alt + {_,shift + }Tab
	bspc node -f {next.local,prev.local}

# Switch workspace
ctrl + alt + {Left,Right}
	bspc desktop -f {prev.local,next.local}

# Switch to last opened workspace
super + {Tab,grave}
	bspc {node,desktop} -f last

# Send to desktop
super + shift + {1-8,0}
    bspc node -d '^{1-8,9}' --follow

# Send to monitor
super + shift + equal
    bspc node -m last --follow

# Expanding windows
super + control + {Left,Right,Up,Down}
	bspc node -z {left -20 0,right 20 0,top 0 -20,bottom 0 20}
	
## Shrinking windows
super + alt + {Left,Right,Up,Down}
	bspc node -z {left 20 0,right -20 0,top 0 20,bottom 0 -20}
	
## Move floating windows
alt + shift + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# Hide/Unhide Window
super + shift + i
	bspwinmask
	
# increase or decrease gaps for all windows via mouse wheel
super + button{4,5}
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 5))

    
# Restore original gap
super + button{2}
	bspc config top_padding 0; bspc config bottom_padding 40; bspc config -d focused window_gap 10

##---------- EOF ----------##
